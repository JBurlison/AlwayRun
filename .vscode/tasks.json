{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-release",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/AlwaysRun.sln",
                "-c",
                "Release"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "publish-release",
            "type": "process",
            "command": "dotnet",
            "args": [
                "publish",
                "${workspaceFolder}/src/AlwaysRun/AlwaysRun.csproj",
                "-c",
                "Release",
                "-r",
                "win-x64",
                "--self-contained",
                "false",
                "-o",
                "${workspaceFolder}/publish"
            ],
            "problemMatcher": "$msCompile",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "publish-self-contained",
            "type": "process",
            "command": "dotnet",
            "args": [
                "publish",
                "${workspaceFolder}/src/AlwaysRun/AlwaysRun.csproj",
                "-c",
                "Release",
                "-r",
                "win-x64",
                "--self-contained",
                "true",
                "-p:PublishSingleFile=true",
                "-o",
                "${workspaceFolder}/publish-standalone"
            ],
            "problemMatcher": "$msCompile",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
